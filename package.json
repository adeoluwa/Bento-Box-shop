{
  "name": "shop-sphere",
  "version": "1.0.0",
  "description": "an e-commerce backend service",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "npx tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run prisma:studio\"",
    "prisma:studio": "prisma studio",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset --force && ts-node --transpile-only prisma/seed",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts",
    "prisma:generate": "npx prisma generate"
  },
  "keywords": [
    "e-commerce",
    "cart",
    "shopping",
    "checkout"
  ],
  "author": "Joseph Adeoluwa",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@types/glob": "^8.1.0",
    "awilix": "^12.0.5",
    "bcrypt": "^5.1.1",
    "concurrently": "^9.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-ping": "^0.4.2",
    "express-useragent": "^1.0.15",
    "glob": "^11.0.1",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "pino": "^9.6.0",
    "pino-elasticsearch": "^8.1.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.5.0",
    "rotating-file-stream": "^3.2.6",
    "scrypt-kdf": "^3.0.0",
    "validator": "^13.12.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-useragent": "^1.0.5",
    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.17",
    "@types/validator": "^13.12.2",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
